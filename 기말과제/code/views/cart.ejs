<%- include("header") %>

<html>
  <body>
    <main id="main">
      
      <section style="height: 100%; padding-top: 20px;" class="section">
        <div class="container">
          <div class="row mb-4 align-items-center">
            <div class="col-md-6" data-aos="fade-up">
              
              <h2>Products</h2>
            </div>
          </div>
        </div>

        <div class="site-section pb-0">
          <div class="container">
            <div class="row align-items-stretch">
              <div class="col-md-8" data-aos="fade-up">
                <table >
                  <% if (isAuthenticated) { %>
                  <thead>
                    <tr>    
                      <th scope="col">No.</th>                
                      <th scope="col">productname</th>
                      <th scope="col"> price</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% data.forEach(function(row, index) { %>
                        <tr>
                          <th scope="row"><%= index + 1 %></th>
                          <td><%= row.productname %></td>
                          <td>$ <%= row.price %></td>
                          <td> <a href="delete/<%= row.id %>" class="btn btn-outline-dark">Delete</a> </td>
                        </tr> <!-- Replace 'column_name' with the actual column names you want to display -->
                      <% }); %>
                      
                    </tbody>
                  </table>
                  <a href="/order" style="margin: 20px 0px;" class="btn btn-outline-dark">Order</a>
                  <% } else { %>
                    <a href="/login" style="margin: 20px 0px;" class="btn btn-outline-dark">Login</a>
                  <% } %>
                  <a href="/" style="margin: 20px 0px;" class="btn btn-outline-dark">Back Home</a>
              </div>
              
            </div>
          </div>
      </section>
      
      
    </main><!-- End #main -->
    <!-- Footer-->
  </body>
  
</html>

  